# Use an official Python runtime as a parent image
FROM public.ecr.aws/lambda/python:3.9

# Install any needed packages specified in requirements.txt
#RUN pip install --no-cache-dir -r requirements_simple.txt

# Set the working directory in the container to /app
WORKDIR /app

ADD requirements_simple.txt /app
RUN pip install -r requirements_simple.txt

# Add the current directory contents into the container at /app
ADD ./football/expected_goals /app/football/expected_goals
ADD ./football/common.py /app/football/common.py
ADD ./football/s3_utils.py /app/football/s3_utils.py
COPY ./football/lambda_functions/lambda_standardise_xg_result_files.py ${LAMBDA_TASK_ROOT}

ENV PYTHONPATH "${PYTHONPATH}:/app"
ENV PYTHONPATH "${PYTHONPATH}:${LAMBDA_TASK_ROOT}"

CMD ["lambda_standardise_raw_xg_results_columns.handler"]