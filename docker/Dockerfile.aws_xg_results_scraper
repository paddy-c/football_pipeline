# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Set the working directory in the container to /app
WORKDIR /app

ADD requirements_simple.txt /app
RUN pip install -r requirements_simple.txt

# Add the current directory contents into the container at /app
ADD ./football_pipeline/expected_goals /app/football/expected_goals
# no need since we added a __main__ entry point to fb_ref module:
#ADD ./football_pipeline/script/load_xg_results.py /app/football/load_xg_results.py
ADD ./football_pipeline/common.py /app/football/common.py
ADD ./football_pipeline/s3_utils.py /app/football/s3_utils.py

ENV PYTHONPATH "${PYTHONPATH}:/app"